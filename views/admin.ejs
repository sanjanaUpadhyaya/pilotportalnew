    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      const data1 = JSON.parse('<%- JSON.stringify(data1) %>'); // Parse the JSON data for chart1
  
      const labels1 = data1.map(item => item.label);
      const values1 = data1.map(item => item.value);
  
      const ctx1 = document.getElementById('chart1').getContext('2d');
      new Chart(ctx1, {
        type: 'bar',
        data: {
          labels: labels1,
          datasets: [{
           
            data: values1,
            backgroundColor: 'rgba(0, 255, 1, 0.1)',
            borderColor: 'rgba(0, 255, 0, 1)',
            borderWidth: 1
          }]
        },
        options: {
          plugins: {
            title: {
              display: true,
              text: 'SUCCESSFUL FLIGHT DETAILS',
              font: {
                weight: 'bold',
