   a gap between the items */
}


.container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

    .input-container {
  display: flex;
  justify-content: space-between;
}
.input-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  grid-gap: 40px; /* Adjust the gap between input fields */
}


.input-container input {
  width: 100%; /* Adjust the width of the input fields */
}
  .input-container input {
    margin: -4px; /* Adjust the spacing between the input fields */
  }



  #imagePreview{
    width: 30%;
    height:30%;
    object-fit:contain;
  }
    </style>
    
</head>
<body>
  <div class="topspace">
   
    <div class='adddetails'>
      Edit your Details
      <div class="user-photo-container">
        <% if (imageUrl) { %>
          <img class="user-photo" src="<%= imageUrl %>" alt="User Photo">
        <% } else { %>
          <div class="alternate-profile-icon"><i class="fas fa-user"></i></div>
        <% } %>
        <div class="user-name"><%= profileData.name %></div>
      </div>
    </div>

    <form action="/update" method="POST" enctype="multipart/form-data">
        <fieldset>
            <div class="input-container">
        <div>
            <label for="name"><b>Name</b></label>
            <input type="text" id="name" placeholder="Name" value="<%= profileData.name %>" name="name" required>
        </div></div></fieldset>
        <fieldset>
            <div class="input-container">
        
        <div>
            <label for="email_id"><b>Email_ID</b></label>
            <input type="email" id="emailid" value="<%= profileData.emailid %>" name="emailid" required readonly>
        </div></div></fieldset>
        
        <fieldset>
            <div class="input-container">
        <div>
            <label for="mobile_no"><b>Mobile_Number</b></label>
            <input type="mobile" id="mobile_no" name="mobile_no" value="<%= profileData.mobileno %>" name="mobile_no" required>
        </div>
        
        
        <div>
            <label for="dob"><b>DOB</b></label>
            <input type="date" id="dob" placeholder="DOB" value="<%= new Date(profileData.dob).toISOString().substring(0, 10) %>" name="dob" required>
        </div></div></fieldset>


        <fieldset>
          <div class="input-container">
        <div class>
          <label for="startdate"><b>Start Date:</b></label>
          <input type="date" id="startdate" placeholder="start date" value="<%= new Date(profileData.startdate).toISOString().substring(0, 10) %>" name="startdate" required>
      </div>

    </div></fieldset>





        <fieldset>
            <div class="input-container">
        <div>
            <label for="type_of_drone_experience"><b>Type of drone experience</b></label>
            <input type="text" id="type_of_drone_experience" value=" <%= profileData.drone_experience %>" name="type_of_drone_experience" required>
        </div>

        <div>
            <label for="honors_and_achievements"><b>Honors and Achievements</b></label>
            <input type="text" id="honors_and_achievements"  value="<%= profileData.honours_achievements %>" name="honors_and_achievements" required>
        </div></div></fieldset>
        <fieldset>
            <div class="input-container">
        
        <div>
            <label for="image">Profile Image</label>
            <input type="file" id="image"  name="imagefile" accept="image/*" />
            <img src="<%= imageUrl %>" id="imagePreview" />
        </div></div></fieldset>
        
        <div>
            <button type="submit">Submit</button>
        </div>
        
    </form>
  </div>
  <script src="https://kit.fontawesome.com/910477f9a1.js" crossorigin="anonymous"></script>
  <script>
    const imageInput = document.getElementById('image');
const imagePreview = document.getElementById('imagePreview');

imageInput.addEventListener('change', () => {
  const file = imageInput.files[0];
  const reader = new FileReader();

  reader.onload = () => {
    imagePreview.src = reader.result;
  };

  if (file) {
    reader.readAsDataURL(file);
  }
});

  </script>
</body>
</html>