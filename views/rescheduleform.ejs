    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

  <div class="topspace">
    <div class='adddetails'>
      Reschedule Flight
    </div>
      
    <form action="/edit_schedule" method="POST">

        <input type="hidden" id="flight_id" name="flight_id" value=<%-schedule_details.flight_id%>>
        <fieldset>
          <div class="input-container">
        <div class="email">
          <label for="email">PILOT</label>
          <input type="email" name='email' id="email" value=<%-schedule_details.email%>>
        </div></div></fieldset>

        <fieldset>
          <div class="container">
        <div class="date">
          <label for="date">Date</label>
          <% var dateObj = new Date(schedule_details.date); %>
                    <% var day = ("0" + dateObj.getDate()).slice(-2); %>
                    <% var month = ("0" + (dateObj.getMonth() + 1)).slice(-2); %>
                     <% var year = dateObj.getFullYear(); %>
          <input type="date" name='date' id="date" value="<%= year + '-' + month + '-' + day %>">
        </div>
        <div class="time">
          <label for="time">Time</label>
          <input type="time" name='time' id="time" value=<%-schedule_details.time%>>
        </div>
        <div class="copilot">
          <label for="copilot">Copilot</label>
          <input type="text" name='copilot' id="copilot" value=<%-schedule_details.copilot%>>
        </div>
      </div></fieldset>

        <fieldset>
          <div class="input-container">
        <div class="description">
          <label for="description">Description</label>
          <input type="text" name='description' id="description" value=<%-schedule_details.description%>>
        </div></div></fieldset>
        
        <fieldset>
          <div class="input-container">

        <div class="called/not">
            <label for="called/not">Called/Not</label>
            <input type="text" name='called' id="called" value=<%-schedule_details.called%>>
          </div>
          </div></fieldset>
        <div>
         <button  type="submit" ONCLICK="alert('Flight is rescheduled succesfully..')"value="Schedule Flight">Submit</button>
        </div>



        
        
      </form>
  
  </div>

