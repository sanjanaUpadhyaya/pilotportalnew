  <div class="topspace">
    <div class='adddetails'>
      Add Crash Details
    </div>
      
    <form action="/add_crash_details" method="POST">
        <fieldset>
            <div class="input-container">
        <div>
            <label for="drone_name">Drone Name:</label>
            <input type="text" id="drone_name" name="drone_name" placeholder="Drone Name" required>
        </div></div></fieldset>
        <fieldset>
            <div class="input-container">
        <div>
            <label for="emailid">Email ID:</label>
            <input type="email" id="emailid" name="emailid" placeholder="Email ID" required>
        </div></div></fieldset>
        <fieldset>
            <div class="input-container">
       
        <div>
            <label for="flight_id">Flight Id:</label>
            <input type="text" id="flight_id" name="flight_id" placeholder="Flight Id"  value="<%= autoid %>"  readonly>
        </div></div></fieldset>
        <!-- <div>
            <label for="damaged_parts">Damaged Parts:</label>
            <input type="text" id="damaged_parts" name="damaged_parts" placeholder="Damaged parts" required>
        </div> -->
        <fieldset>
            <div class="input-container">
        <div>
            <label for="reason">Reason:</label>
            <input type="text" id="reason" name="reason" placeholder="Reason" required>
        </div></div></fieldset>
        <button type="submit" ONCLICK="alert('Succesfully Added Crash Details...')">Submit</button>
        
    </form>
  </div>
</body>
