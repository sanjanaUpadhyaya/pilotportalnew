<body>


<div class="topspace">
  <div class="user-photo-container2">
    <!-- <% if (imageUrl) { %> commnted
      <img class="user-photo2" src="<%= imageUrl %>" alt="User Photo">
    <% } else { %> -->
      <div class="alternate-profile-icon2"><i class="fas fa-user"></i></div>
    <!-- <% } %> -->
    <div class="user-name2"><%= profileData.name %></div>
  </div>
  
  <div class="user-photo-container">
    <!-- <% if (imageUrl) { %>
      <img class="user-photo" src="<%= imageUrl %>" alt="User Photo"> commented
    <% } else { %> -->
      <div class="alternate-profile-icon"><i class="fas fa-user"></i></div>
    <!-- <% } %> -->
    <div class="user-name"><%= profileData.name %></div>
  </div>
  <div class="user-info-card">
  <div class="form-container">
    <form>
        <fieldset>
            <div class="input-container">
      <div>
        <label class="form-label" for="email_id"><b>Email_ID:</b></label>
        <span><%= profileData.emailid %></span>
      </div></div></fieldset>
      <fieldset>
        <div class="input-container">
      <div>
        <label class="form-label" for="mobile_no"><b>Mobile_Number:</b></label>
        <span><%= profileData.mobileno %></span>
      </div></div></fieldset>
      <fieldset>
        <div class="input-container">
      <div>
        <label class="form-label" for="dob"><b>DOB:</b></label>
        <span> <%= new Date(profileData.dob).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'short',
          day: 'numeric'
        }) %></span>
      </div></div></fieldset>

      <fieldset>
        <div class="input-container">
      <div>
        <label class="form-label" for="startdate"><b>start date:</b></label>
        <span> <%= new Date(profileData.startdate).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'short',
          day: 'numeric'
        }) %></span>
      </div></div></fieldset>






      <fieldset>
        <div class="input-container">
      <div>
        <label class="form-label" for="Type of Drone Experience"><b>Type of Drone Experience:</b></label>
        <span> <%= profileData.drone_experience %></span>
      </div></div></fieldset>
      <fieldset>
        <div class="input-container">
      <div>
        <label class="form-label" for="Honors and Achievements"><b>Honors and Achievements:</b></label>
        <span> <%= profileData.honours_achievements %></span>
      </div></div></fieldset>
      <fieldset>
        <div class="input-container">
      <div>
        <label class="form-label" for='Total Flying Hours'><b>Total Flying Hours:</b></label>
        <% if (totalDurationInSeconds >= 3600) { %>
          <% const hours = Math.floor(totalDurationInSeconds / 3600); %>
          <% const minutes = Math.floor((totalDurationInSeconds % 3600) / 60); %>
          <% const seconds = totalDurationInSeconds % 60; %>
          <span><%= hours %> hrs <%= minutes %> mins <%= seconds %> secs</span>
        <% } else if (totalDurationInSeconds >= 60) { %>
          <% const minutes = Math.floor(totalDurationInSeconds / 60); %>
          <% const seconds = totalDurationInSeconds % 60; %>
          <span><%= minutes %> mins <%= seconds %> secs</span>
        <% } else { %>
          <span><%= totalDurationInSeconds %> seconds</span>
        <% } %>
      </div></div></fieldset>
      <fieldset>
        <div class="input-container">
      <div>
        <label class="form-label" for='Total Simulation Time'><b>Total Simulation Time:</b></label>
        <% if (sim_totalDurationInMinutes >= 60) { %>
          <% const hours = Math.floor(sim_totalDurationInMinutes / 60); %>
          <% const minutes = sim_totalDurationInMinutes % 60; %>
          <span><%= hours %> hrs <%= minutes %> mins</span>
        <% } else { %>
          <span><%= sim_totalDurationInMinutes %> minutes</span>
        <% } %>
      </div></div></fieldset>
    </form>
  </div>
  </div>
  </div>
  





  
