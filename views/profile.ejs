    <style>
        /* Existing styles */
        
        /* New style for user information card */
        .user-info-card {
            margin: 20px auto;
            max-width: 450px;
            background-color: #fff;
            padding: 20px;
            border-radius: 4px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            background: rgba(212, 211, 227, 0.5);
            border-radius: 35px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 400;
            font-size: 15px;
            line-height: 25px;
            color: black;
            align-items: center;
            text-align: end;
            margin-top: 150px;
            transition: transform 0.3s ease-in-out;
        }
        
        /* New style for user photo container */
        .user-photo-container {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
        }
        
        /* New style for user photo */
        .user-photo {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
        }
        
        /* New style for alternate profile icon */
        .alternate-profile-icon {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #ddd;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            color: #333;
        }
        
        /* New style for user name */
        .user-name {
            margin-top: 10px;
            font-weight: bold;
            font-size: 18px;
            color: #333;
        }
        
        /* New style for form container */
        .form-container {
            margin-top: 20px;
            text-align: left; 
            margin-left: 10px;/* Align the form content to the left */
        }
        
        /* New style for form labels */
        .form-label {
            font-weight: bold;
            display: inline-block;
            width: 250px; /* Adjust the width as needed */
        }
        
        /* New style for form inputs */
        .form-input {
            width: 100%;
            padding: 5px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            font-family: 'Montserrat', sans-serif;
            font-weight: 400;
            font-size: 15px;
            line-height: 37px;
            color: white;
            background: #ffffff;
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        }
        
        /* New style for form submit button */
        .form-submit-button {
            display: inline-block;
            padding: 8px 16px;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
            width: 100px;
            background: #5C5992;
            border: 3px solid #F5F5F5;
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            border-radius: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .form-submit-button:hover {
            background-color: rgba(217, 217, 217, 0.17);
        }
        .user-photo2{
            position: absolute;
            top: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
        
        /* New style for alternate profile icon */
        .alternate-profile-icon2 {
            position: absolute;
            top: 10px;
            right: 20px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #ddd;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            color: #333;
        }
        .user-name2{
            color:black;
            position: absolute;
            top: 70px;
            right: 20px;
            width: 50px;
            height: 50px;
            font-size: 12px;
            font-weight: bold;
            background-position: center;
            background-repeat: no-repeat;
        }
        
        /* Pop-up effect */
        .user-info-card:hover {
            transform: scale(1.05);
        }
        fieldset {
    margin-bottom: 20px; /* Adjust the spacing between fieldsets */
    padding: 12px; /* Add padding around fieldsets */
